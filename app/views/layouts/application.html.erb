<!DOCTYPE html>
<html>
<head>
  <title>Nike Enchant</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="content">
      <%= image_tag 'nike.jpg', :class => 'xleft' %>

      <ul class="xleft">
        <li></li>
        <li><a href="#">WATCH</a></li>
        <li><a href="#">LEARN</a></li>
        <li><a href="#">ENCHANT</a></li>
      </ul>


      <ul id="right-links">
        <li><%= image_tag 'usa.jpg', :class => 'xright', :id => 'usa-flag' %></li>
        <% if user_signed_in? %>
        <li><%= link_to current_user.email, '#' %></li>
        <li><%= link_to 'SIGN OUT', 'sign_out' %></li>
        <% else %>
        <li><%= link_to 'SIGN IN', '/sign_in' %></li>
        <% end %>
      </ul>
    </div>
  </header>

  <%= yield %>

  <footer></footer>
</body>
</html>
