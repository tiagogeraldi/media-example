<div class="well signup container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
  <h2 class="form-signin-heading">Sign in</h2>

  <%= f.email_field :email, :autofocus => true,
  :placeholder => 'E-mail', :class => 'input-block-level' %>

  <%= f.password_field :password, :placeholder => 'Password', :class => 'input-block-level' %>

  <% if devise_mapping.rememberable? -%>
  <p>
    <%= f.check_box :remember_me, :class => 'pull-left' %>
    <%= f.label :remember_me %>
  </p>
  <% end -%>

  <div>
    <%= f.submit 'Sign In', :class => 'btn btn-large' %>
  </div>
  <% end %>

  <p>
    <%= render "devise/shared/links" %>
  </p>
</div>

