<div class="well signup container">
<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true,
  :placeholder => 'E-mail', :class => 'input-block-level' %>

  <div><%= f.submit "Send me reset password instructions", class: 'btn' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
